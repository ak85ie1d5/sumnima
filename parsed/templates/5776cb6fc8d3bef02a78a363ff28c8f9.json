{
  "sumnima/components/blog-slider": "    <section class=\"blog-homepage\">\n        <h2 class=\"page-heading\">{{lang 'blog.recent_posts' }}</h2>\n            <div class=\"swiper blogSwiper\" itemscope itemtype=\"http://schema.org/Blog\">\n                <div class=\"swiper-wrapper\">\n                    {{#each blog.recent_posts}}\n                    <div class=\"swiper-slide\">\n                        <article\n                            itemprop=\"blogPosts\"\n                            itemscope\n                            itemtype=\"http://schema.org/BlogPosting\"\n                            >\n                            <figure>\n                                <a href=\"{{url}}\" itemprop=\"url\" title=\"{{title}}\">\n                                    <img\n                                    src=\"{{getImage thumbnail 'blog_size'}}\"\n                                    alt=\"{{title}}\"\n                                    width=\"400\"\n                                    height=\"400\"\n                                    itemprop=\"image\"\n                                    itemscope\n                                    itemtype=\"https://schema.org/ImageObject\"\n                                    />\n\n                                </a>\n                            </figure>\n                            \n                            <div class=\"blog-description\">\n                                <h3 title=\"{{title}}\" itemprop=\"headline\">\n                                <a href=\"{{url}}\" itemprop=\"url\">{{title}}</a>\n                                </h3>\n                                <p itemprop=\"description\">{{summary}}&hellip; <a href=\"{{url}}\" aria-label=\"{{post.title}} {{lang 'blog.read_more'}}\">{{lang 'blog.read_more'}} - {{title}}</a>\n                            </p>\n                        </div>\n                    </article>\n                </div>\n                {{/each}}\n            </div>\n        <div class=\"swiper-scrollbar\"></div>\n        </div>\n    </section>\n"
}